<%- include('partials/head'); -%>
<%- include('partials/header'); -%>


<section>
<% tests.forEach(test => { %>
    <article>
        <h2><%= test.node.name %></h2>
        <img src="<%= test.node.openGraphImageUrl %>" alt="">   
        <% if (test.node.description != null) { %>
            <p><%= test.node.description %></p>
        <% }else{ %>
            <p>Description not available</p>
        <% } %> 
        <p>Last updated: <%= test.node.pushedAt %></p>   
        <% if (test.node.homepageUrl !== null) { %>
        <a href="<%= test.node.homepageUrl %>"><span>Live project</span></a>
        <% } %>
        <a href="<%= test.node.url %>"><span>Browse Github</span></a>        
    </article>
<% }) %>
</section>
<%- include('partials/footer'); -%>